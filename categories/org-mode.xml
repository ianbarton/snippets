&lt;h2 id="sec-1"&gt;&lt;a id="ID-3653d945-0b66-492a-818d-57e88847003f" name="ID-3653d945-0b66-492a-818d-57e88847003f"&gt;&lt;/a&gt;Org Lint All Files in a Folder.&lt;/h2&gt;
&lt;div class="outline-text-2" id="text-1"&gt;
&lt;div class="highlight"&gt;&lt;pre&gt;&lt;span&gt;&lt;/span&gt;;;Here's one way:


(defun org-lint-dir (directory)
  (let* ((files (directory-files directory t ".*\\.org$")))
    (org-lint-list files)))

(defun org-lint-list (files)
  (cond (files
	 (org-lint-file (car files))
	 (org-lint-list (cdr files)))))

(defun org-lint-file (file)
  (let ((buf)
	(lint))
    (setq buf (find-file-noselect file))
    (with-current-buffer buf (if (setq lint (org-lint)) (print (list file lint))))))

(org-lint-dir "/home/nick/lib/org")
